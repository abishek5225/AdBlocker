{
  "manifest_version": 2,
  "name": "LinkedIn AdBlocker",
  "description": "Blocking ads",
  "version": "0.0.1",
  "author": "me",
  "browser_action": {
    "default_title": "LinkedIn AdBlocker"
  },
  "permissions": [
    "tabs",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "https://www.linkedin.com/*"
  ],
  "background": {
  "scripts": ["background.js", "linkedin.js"],
  "persistent": true
}

}
